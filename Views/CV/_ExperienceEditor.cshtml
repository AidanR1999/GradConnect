@model Experience

<div class="ExpEditorRow">
    @using (Html.BeginCollectionItem("experiences"))
    {
        <a href="#" class="deleteRow" id="removeExp"><i class="fas fa-times"></i></a>
        
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="CompanyName"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="CompanyName" />
            </div>
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="JobTitle"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="JobTitle" />
            </div>
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="YearStart"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="YearStart" />
            </div>
            <span asp-validation-for="YearStart" class="text-danger"></span> 
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="YearEnd"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="YearEnd" />
            </div>
            <span asp-validation-for="YearEnd" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Responsibilities"></label>
            </div>
            <div class="col-9">
                <textarea asp-for="Responsibilities" >
                </textarea>
            </div>
            <span asp-validation-for="Responsibilities" class="text-danger"></span>
        </div>
        <hr>
    }
    
</div>
