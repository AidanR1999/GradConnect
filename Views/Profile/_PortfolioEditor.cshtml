@model Portfolio

<div class="PortfolioEditorRow">
    @using (Html.BeginCollectionItem("ListOfPortfolios"))
    {
        <a href="#" class="deleteRow" id="removePortfolio"><i class="fas fa-times"></i></a>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ProjectName"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="ProjectName" />
            </div>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div> 
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
                <textarea rows="3" cols="40" asp-for="Description">
                    </textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Link"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="Link" />
            </div>
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input asp-for="PictureFile" class="custom-file-input" id="portfolioImage">
                <label class="custom-file-label" for="PictureFile">Choose file</label>
            </div>
            <div class="input-group-append">
                <span class="input-group-text" id="">Upload</span>
            </div>
        </div>

        
        <hr>
    }
    
</div>